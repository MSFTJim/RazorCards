<br><br><br><br>

<div class="container">
    <div class="row g-4">
        @foreach (var item in Model.Cocktails)
        {   <div class="col-12 col-md-6 col-lg-4">
                <div class="card">
                    <img src="@item.ImagePath" alt="@item.Name" class="card-img-top">
                    <div class="card-body">
                        <h3>@item.Name</h3>
                        <h5>@item.Price</h5>
                        <p>@item.Desc
                    </div>
                    <div class="card-footer text-center">                
                        <a asp-page="/EditCocktail" asp-route-ID="@item.Id" class="btn btn-primary m-1">Edit</a>
                        <a asp-page="/DeleteCocktail" asp-route-ID="@item.Id"  class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>            
            </div>        
        }
    </div>
</div>

<br><br><br><br>

<h3>Last</h3>


<div class="card-group">
    @foreach (var item in Model.Cocktails)
    {        
        <div class="card m-3" >
            <div class="card-header">
                <img src="@item.ImagePath" class="card-img" style="object-fit:contain;" alt="Cocktail Image">                     
            </div>    

            <div class="card-body">
                <h3>@item.Name</h3>
                <p>Price: @item.Price
            </div>    

            <div class="card-footer text-center">
                @* <a href="#" class="btn btn-primary m-1">View</a> *@
                <a asp-page="/EditCocktail" asp-route-ID="@item.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-page="/DeleteCocktail" asp-route-ID="@item.Id"  class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>